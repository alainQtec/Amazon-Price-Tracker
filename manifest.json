{
    "manifest_version": 2,
    "name": "Price Tracker",
    "version": "1.0",
    "description": "Track prices of Amazon products",
    "permissions": [
        "activeTab",
        "storage",
        "notifications",
        "alarms",
        "all_urls",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "/images/extension.png",
            "32": "/images/extension.png",
            "48": "/images/extension.png",
            "128": "/images/extension.png"
        },
        "default_popup": "popup.html"
    }
}